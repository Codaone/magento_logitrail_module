<?xml version="1.0"?>
<config>
  <modules>
    <Codaone_Logitrail>
      <version>0.1.0</version>
    </Codaone_Logitrail>
  </modules>
  <global>
    <helpers>
      <logitrail>
        <class>Codaone_Logitrail_Helper</class>
      </logitrail>
    </helpers>
	<models>
	  <logitrail>
		<class>Codaone_Logitrail_Model</class>
		<resourceModel>logitrail_mysql4</resourceModel>
	  </logitrail>
	</models>
        <blocks>
            <logitrail> 
                <class>Codaone_Logitrail_Block</class>
            </logitrail>
        </blocks>
    </global>
   <frontend>
     <routers>
      <logitrail>
        <use>standard</use>
        <args>
          <module>Codaone_Logitrail</module>
          <frontName>logitrail</frontName>
        </args>
      </logitrail>
    </routers>
        <layout>
            <updates>
                <logitrail>
                    <file>Logitrail/logitrail.xml</file>
                </logitrail>
            </updates>
        </layout> 
    </frontend>
	<default>
        <carriers>
            <logitrail>
                <active>1</active>
                <model>logitrail/carrier_logitrail</model>
                <name>Logitrail</name>
                <title>Logitrail</title>
                <description>Logitrail</description>
                <sort_order>0</sort_order>
            </logitrail>
        </carriers>
    </default>
</config> 
